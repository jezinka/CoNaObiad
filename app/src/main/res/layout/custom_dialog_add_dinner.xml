<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_add_dinner_width"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical|center_horizontal">

    <EditText
        android:id="@+id/meal_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pick_meal"
        android:textAlignment="center"
        android:textSize="@dimen/edit_text_size"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <EditText
        android:id="@+id/meal_name_id"
        android:visibility="invisible"
        android:layout_height="@dimen/hidden_dimension"
        android:layout_width="@dimen/hidden_dimension"
        android:inputType="number" />

    <TextView
        android:id="@+id/date_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/edit_text_size"
        android:textAlignment="center" />

</LinearLayout>
