<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <EditText
        android:id="@+id/meal_name_text"
        android:layout_width="249dp"
        android:layout_height="68dp"
        android:text="@string/pick_meal"
        android:textAlignment="center"
        android:textSize="32sp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <EditText
        android:id="@+id/meal_name_id"
        android:visibility="invisible"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:inputType="number" />

    <TextView
        android:id="@+id/date_view"
        android:layout_width="249dp"
        android:layout_height="47dp"
        android:textSize="32sp"
        android:layout_below="@id/meal_name_text"
        android:layout_alignParentStart="true"
        android:textAlignment="center" />

    <ImageButton
        android:id="@+id/calendar_button"
        android:layout_width="72dp"
        android:layout_height="45dp"
        android:src="@android:drawable/ic_menu_my_calendar"
        android:text="@string/pick_date"
        android:layout_centerVertical="@+id/meal_name_text"
        android:layout_toEndOf="@+id/meal_name_text" />

</RelativeLayout>
