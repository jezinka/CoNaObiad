<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/darker_gray">

    <TextView
        android:id="@+id/dinner_date"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:lines="2"
        android:gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_light" />

    <TextView
        android:id="@+id/text_view"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:lines="6"
        android:layout_below="@id/dinner_date"
        android:background="@android:color/white"
        android:layout_marginBottom="2dp"
        android:paddingLeft="5dp" />

    <ImageButton
        android:id="@+id/trash_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/text_view"
        android:layout_alignTop="@+id/text_view"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_recycle_bin" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/text_view"
        android:gravity="center_horizontal">

        <ImageButton
            android:id="@+id/add_dinner_button"
            style="@style/dinner_buttons"
            android:src="@drawable/ic_add" />

        <ImageButton
            android:id="@+id/show_recipe_button"
            style="@style/dinner_buttons"
            android:src="@drawable/ic_text_book" />

        <ImageButton
            android:id="@+id/show_ingredients_button"
            style="@style/dinner_buttons"
            android:src="@drawable/ic_list_verification" />
    </LinearLayout>


</RelativeLayout>