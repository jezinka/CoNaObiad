<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:background="@android:color/darker_gray"
        android:gravity="center_horizontal"
        android:lines="6"
        android:textColor="@android:color/white" />

    <ImageButton
        android:id="@+id/trash_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/text_view"
        android:layout_alignEnd="@+id/text_view"
        android:src="@android:drawable/ic_menu_delete"
        android:background="@android:color/transparent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/text_view">

        <ImageButton
            android:id="@+id/add_dinner_button"
            style="@style/dinner_buttons"
            android:src="@android:drawable/ic_menu_add" />

        <ImageButton
            android:id="@+id/show_recipe_button"
            style="@style/dinner_buttons"
            android:src="@android:drawable/ic_menu_my_calendar" />

        <ImageButton
            android:id="@+id/show_ingredients_button"
            style="@style/dinner_buttons"
            android:src="@drawable/checklist_icon" />
    </LinearLayout>


</RelativeLayout>